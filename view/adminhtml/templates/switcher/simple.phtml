/** @var \M2E\TikTokShop\Block\Adminhtml\Switcher $block */

?>

<?php
if ($items = $block->getItems()) : ?>
    <div class="switcher">

        <label for="<?php
      /* @noEscape */ echo $block->getParamName(); ?>_switcher"><?php
          /* @noEscape */ echo $block->getLabel(); ?></label>

        <select
            id="<?php
          /* @noEscape */ echo $block->getParamName(); ?>_switcher"
            name="<?php
          /* @noEscape */ echo $block->getParamName(); ?>_switcher"
            onchange="<?php
          /* @noEscape */ echo $block->getSwitchCallbackName() ?>.call(this);"
            class="admin__control-select"
            <?php
            if ($block->hasIsDisabled()) :
            ?>disabled="disabled"<?php
        endif; ?>
        >
            <?php
            if ($block->hasDefaultOption()) : ?>
                <option value="<?php
              /* @noEscape */ echo $block->getDefaultOptionValue(); ?>"><?php
                    echo \M2E\Core\Helper\Data::escapeHtml($block->getDefaultOptionName()); ?></option>
            <?php
            endif; ?>

            <?php
            foreach ($items as $item) : ?>
                <?php
                if (count($items) > 1) : ?>
                    <optgroup label="<?php
                  /* @noEscape */ echo $item['label'] ?>">
                <?php
                endif; ?>

                <?php
                foreach ($item['value'] as $nestedItem) : ?>
                    <option
                        value="<?php
                      /* @noEscape */ echo $nestedItem['value'] ?>"
                        <?php
                        if ($block->getSelectedParam() == $nestedItem['value']) {
                            echo ' selected="selected"';
                        } ?>
                    >
                        <?php
                      /* @noEscape */ echo $nestedItem['label'] ?>
                    </option>
                <?php
                endforeach; ?>

                <?php
                if (count($items) > 1) : ?>
                    </optgroup>
                <?php
                endif; ?>

            <?php
            endforeach; ?>
        </select>

        <?php
        if ($block->getTooltip()) : ?>
            <?php
            echo $block->getTooltipHtml($block->getTooltip()); ?>
        <?php
        endif; ?>
    </div>

    <script>

        <?php /* @noEscape */ echo $block->getSwitchCallbackName() ?> = function () {
            <?php /* @noEscape */ echo $block->getSwitchCallback() ?>
        }

    </script>

<?php
endif; ?>
